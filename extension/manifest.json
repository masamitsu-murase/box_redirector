{
    "manifest_version": 3,
    "name": "Box Redirector",
    "version": "1.0.0",
    "description": "Extension to redirect to Box page.",
    "icons": {
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*.box.com/*"],
            "js": [
                "js/common.js",
                "js/content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_icon": {
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Box Redirector"
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "https://*.box.com/*"
    ],
    "optional_host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "html/redirector_en.html",
                "html/redirector_ja.html"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ]
}
